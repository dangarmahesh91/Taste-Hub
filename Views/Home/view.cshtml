@model List<Taste_Hub.Models.Class_Admin_Food>
@{
    Layout = "~/Views/Shared/Client_Layout.cshtml"; 
}
<style>
    .container{
        padding: 10px;
        display:flex;
        margin:0 auto;
    }
     .image img{
        width: 500px;
        height:500px;
        border-radius:10px;
        margin-top:15px;
        margin:0;
        margin-left: 100px;
    }
    .container .text{
        display: block;
        text-align:center;
        margin-top:100px;
        margin-left:100px;
    }
    .text h1{
        font-weight:bold;
        font-family:'Microsoft PhagsPa';
        font-size:50px;
    }
    .btn{
        background-color: #800000;
        color: white;
        width:55%;
        font-size:33px;
        padding:10px;
        border-radius:12px;
    }
    .btn:hover{
            background-color: #A30000; /* Darker green on hover */
            color: #fff;
    }
    .text .price{
        font-size:24px;
        font-weight:bold;
    }
</style>
<body style="background-color:#fffff0">
    <div class="container">
        @foreach(var items in Model)
        {
            <div class="image">
                <img src="@items.Image" alt="Image" />
            </div>
            <div class="text">
                <h1>@items.Name</h1>
                <p>@items.Description</p>
                <p class="price">₹ @items.Price</p>
                <input class="btn" type="button" id="cart" name="cart" onclick="cart(@items.Id)" value="Add to Cart" />
            </div>       
        }
    </div>
</body> 
<script>
    function cart(id)
    {
        window.location.href="/Home/AddToCart?Id="+id;
    }
</script>


